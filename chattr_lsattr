[root@192 Downloads]# cd ..
[root@192 ~]# chattr -i Downloads
[root@192 ~]# cd Downloads/
[root@192 Downloads]# touch abc5
[root@192 Downloads]# echo "hello5" > abc5
[root@192 Downloads]# cat abc5
hello5
[root@192 Downloads]# cd ..
[root@192 ~]# chattr -R +a Downloads/
